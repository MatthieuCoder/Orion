#!/bin/bash

iptables "${IPTABLES_FLAG}" ext-orion \
    -m set --match-set orion-net dst \
    -j ACCEPT

iptables "${IPTABLES_FLAG}" ext-orion \
    -m state --state ESTABLISHED \
    -j ACCEPT

iptables "${IPTABLES_FLAG}" ext-orion \
    -j DROP

if [[ "$IPTABLES_FLAG" == "-A" ]]
do
    export IPTABLES_FLAG="-I "
    export IPTABLES_FLAG_AFTER_CHAIN="1"
done


iptables "${IPTABLES_FLAG}" FORWARD "${IPTABLES_FLAG_AFTER_CHAIN}" \
    -m devgroup --src-group 30 \
    -j ext-orion

iptables -t nat "${IPTABLES_FLAG}" POSTROUTING "${IPTABLES_FLAG_AFTER_CHAIN}" \
    -m set ! --match-set orion-net src \
    -m set --match-set orion-net dst \
    -m devgroup --dst-group 30 \
    -j SNAT --to-source 10.30.$1.1

iptables -t nat "${IPTABLES_FLAG}" POSTROUTING "${IPTABLES_FLAG_AFTER_CHAIN}" \
    -m set --match-set orion-routed dst \
    -m set --match-set private-ips src \
    -m set ! --match-set orion-net src \
    -m devgroup ! --dst-group 30 \
    -j SNAT --to-source 10.30.$1.1

iptables -t nat "${IPTABLES_FLAG}" POSTROUTING "${IPTABLES_FLAG_AFTER_CHAIN}" \
    -s 172.30.0.0/15 \
    -d 10.30.0.0/16 \
    -m devgroup --dst-group 30 \
    -j SNAT --to-source 10.30.$1.1
